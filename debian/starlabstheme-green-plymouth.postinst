#!/bin/sh

set -e

if [ "$1" = configure ]; then
	update-alternatives --install /usr/share/plymouth/themes/default.plymouth \
        default.plymouth /usr/share/plymouth/themes/StarLabs-Green/StarLabs-Green.plymouth 150 \
        --slave /usr/share/plymouth/themes/default.grub default.plymouth.grub /usr/share/plymouth/themes/StarLabs-Green/StarLabs.grub
	update-initramfs -u
fi

